#!/bin/bash

# Select emoji using fuzzel
emoji=$(cat ~/.config/hypr/scripts/emoji-list.txt | fuzzel --dmenu -p "Emoji: " | awk '{print $1}')

if [ -n "$emoji" ]; then
    # Type each character of the emoji with a small delay
    # This should help with reliability issues
    for (( i=0; i<${#emoji}; i++ )); do
        char="${emoji:$i:1}"
        echo -n "$char" | wtype -d 10 -
    done
fi
