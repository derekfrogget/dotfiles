#!/bin/bash

# Get emoji from fuzzel and copy to clipboard
emoji=$(cat ~/.config/hypr/scripts/emoji-list.txt | fuzzel --dmenu -p "Emoji: " | awk '{print $1}')

# If an emoji was selected, copy it to clipboard and type it
if [ -n "$emoji" ]; then
    # Copy to clipboard
    echo -n "$emoji" | wl-copy
    
    # Type the emoji using wtype
    # Adding a space character seems to help wtype process the emoji correctly
    wtype "$emoji "
    # Delete the extra space we added
    wtype -k BackSpace
fi
