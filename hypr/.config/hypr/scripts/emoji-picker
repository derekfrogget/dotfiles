#!/bin/bash

# Select emoji using fuzzel
emoji=$(cat ~/.config/hypr/scripts/emoji-list.txt | fuzzel --dmenu -p "Emoji: " | awk '{print $1}')

if [ -n "$emoji" ]; then
    # Create a temporary file
    temp_file=$(mktemp)
    
    # Write the emoji to the temporary file
    echo -n "$emoji" > "$temp_file"
    
    # Use wtype with the file
    wtype -f "$temp_file"
    
    # Clean up
    rm "$temp_file"
fi
