#!/bin/bash

# Select emoji using fuzzel
emoji=$(cat ~/.config/hypr/scripts/emoji-list.txt | fuzzel --dmenu -p "Emoji: " | awk '{print $1}')

if [ -n "$emoji" ]; then
    # Copy to clipboard
    echo -n "$emoji" | wl-copy
    
    # Try to type it directly (works in native Wayland apps)
    sleep 0.5
    wtype "$emoji"
    
    # Notify user that emoji is copied to clipboard
    notify-send "Emoji Copied" "$emoji is in clipboard" -t 2000
fi
